{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "furniture",
  "description": "Definition of different furniture items",
  "type": "array",
  "items": [
    {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "materials": {
          "type": "array",
          "items": [
            {
              "type": "string"
            }
          ]
        },
        "type": {
          "type": "string"
        },
        "second_hand": {
          "type": "boolean"
        }
      },
      "required": ["id", "materials", "type"]
    }
  ]
}
